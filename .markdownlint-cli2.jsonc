{
  "config": {
    "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
    "default": true,
    "MD013": false,
    "MD033": false,
    "MD034": false,
    "MD041": false,
    "MD003": { "style": "atx" },
    "MD025": true,
    "MD004": { "style": "dash" },
    "MD007": { "indent": 2 },
    "MD030": { "ul_single": 1, "ul_multi": 1 },
    "MD040": false,
    "MD046": false,
    "MD024": { "siblings_only": true },
    "MD049": { "style": "asterisk" },
    "MD050": { "style": "asterisk" },
  },
  "globs": ["src/content/docs/**/*.md", "src/content/docs/**/*.mdx"],
  "ignores": [
    "node_modules",
    "dist",
    ".astro",
    ".claude",
    "CHANGELOG.md",
    "AGENTS.md",
    "CLAUDE.md",
    "DEPLOYMENT.md",
    "MERMAID-SETUP.md",
    "README.md",
  ],
}
