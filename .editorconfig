# EditorConfig for consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,mjs,ts,astro}]
indent_style = tab
indent_size = 2
max_line_length = 100

[*.{json,jsonc,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

[package.json]
indent_style = space
indent_size = 2
